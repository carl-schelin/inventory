#!/bin/ksh

# Copy the configuration files over to the status server to be processed

HOSTNAME=`hostname|cut -f1 -d.`
if [[ $HOSTNAME = 'incojs01' ]]
then
  SOURCE=/usr/local/httpd/htsecure
fi
if [[ $HOSTNAME = 'inventory' ]]
then
  SOURCE=/var/www/html
fi

scp $SOURCE/nagios/monitor.sqa.cfg    status.intrado.com:/var/tmp
scp $SOURCE/nagios/monitor.lab.cfg    status.intrado.com:/var/tmp
scp $SOURCE/nagios/monitor.prod.cfg   status.intrado.com:/var/tmp
scp $SOURCE/nagios/monitor.loms.cfg   status.intrado.com:/var/tmp
scp $SOURCE/nagios/monitor.switch.cfg status.intrado.com:/var/tmp

